<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="333dp"
        android:layout_height="332dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="28dp">

        <Button
            android:id="@+id/tempBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontColor"
            android:text="비콘 연동 성공"
            app:layout_constraintStart_toStartOf="@+id/loadingImage"
            tools:layout_editor_absoluteY="258dp" />

        <Button
            android:id="@+id/tempBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textColor="@color/fontColor"
            android:text="연동 실패"
            app:layout_constraintBottom_toBottomOf="@+id/tempBtn1"
            app:layout_constraintEnd_toEndOf="@+id/loadingImage"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tempBtn1"
            app:layout_constraintTop_toTopOf="@+id/tempBtn1"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/loadingImage"
            android:layout_width="211dp"
            android:layout_height="191dp"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loading" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>